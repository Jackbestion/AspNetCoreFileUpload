@{
    ViewData["Title"] = "Home Page";
}
@model IList<UserViewModel>

<div class="row">
    <div class="col-lg-12">
        <a asp-action="New" class="btn btn-default">添加</a>
    </div>
</div>
<hr />
<form asp-controller="Home" asp-action="Index" method="post">
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>姓名</th>
                        <th>身份证号</th>
                        <th>附件</th>
                    </tr>
                </thead>
                @foreach (var user in Model) {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.IdNum</td>
                        <td><img width="88" height="88" src="@user.IdCardImgName" /></td>
                    </tr>
                }
                
            </table>
        </div>
    </div>
</form>
